{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "rootDir": "./src",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"]
}
